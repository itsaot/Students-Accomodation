@model IEnumerable<WebApplication20.Models.StudentBooking>

@{
    ViewData["Title"] = "Student Bookings";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Link to Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            text-align: center;
        }

        .student-info {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

            .student-info span {
                font-weight: bold;
            }

            .student-info i {
                color: #007bff;
                margin-right: 8px;
            }

        tr:hover {
            background-color: #f5f5f5;
        }

        .btn {
            text-decoration: none;
            padding: 8px 12px;
            color: white;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Book Now</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>Student Information</th>
                <th>Gender</th>
                <th>Room Type</th>
                <th>Booking Start Date</th>
                <th>Booking End Date</th>
                <th>Room Number</th>
                <th>Emergency Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Student Information Column -->
                    <td>
                        <div class="student-info">
                            <div><i class="fas fa-user"></i> <span>Name:</span> @Html.DisplayFor(modelItem => item.Name)</div>
                            <div><i class="fas fa-user-tag"></i> <span>Surname:</span> @Html.DisplayFor(modelItem => item.Surname)</div>
                            <div><i class="fas fa-envelope"></i> <span>Email:</span> @Html.DisplayFor(modelItem => item.Email)</div>
                            <div><i class="fas fa-phone"></i> <span>Phone:</span> @Html.DisplayFor(modelItem => item.PhoneNumber)</div>
                        </div>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.roomType)</td>
                    <td>@Html.DisplayFor(modelItem => item.BookingStartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.BookingEndDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmergencyContact)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Cancel
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</body>
</html>
